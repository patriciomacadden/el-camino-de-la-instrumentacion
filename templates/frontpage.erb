<div class="flex-1 px-4 pt-6 space-y-14 pb-14 xl:pb-36 md:px-16 xl:pt-12 xl:px-[148px] 2xl:px-64 xl:space-y-20 flex flex-col justify-center">
    <div class="space-y-12 text-center">
        <% if title %>
        <h1 class="w-full relative uppercase font-title text-[48px] md:text-[72px] xl:text-[120px] leading-none">
            <%= title %>
        </h1>
        <% end %>
        <% if subtitle %>
        <h2 class="w-full relative uppercase font-title text-[24px] md:text-[32px] xl:text-[48px] leading-none">
            <%= subtitle %>
        </h2>
        <% end %>
        <% if description %>
        <p class="text-2xl xl:text-[32px] font-light leading-tight mx-auto max-w-4xl">
            <%= description %>
        </p>
        <% end %>
    </div>
    <div>
        <% if content && !content.empty? %>
        <div class="pt-8">
            <%= content %>
        </div>
        <% end %>
    </div>
</div>
